// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id // Discord ID
  instances Instance[]
}

model Instance {
  id       Int       @id @default(autoincrement())
  name     String
  imgSrc   String?
  ownerId  String
  members  User[]
  manga    Manga[]
  webhooks Webhook[]
}

model Webhook {
  id        String     @id
  token     String
  instances Instance[]
}

model Manga {
  id        String     @id // MangaDex UUID
  instances Instance[]
}
